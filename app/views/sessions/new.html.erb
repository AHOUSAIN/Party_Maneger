<div id="wrapper">

<!-- start page -->
<div id="page">
	<!-- start content -->
	<div id="content">
	<div id="logo">

	</div>

		<div class="post">
			<h1>Sign in</h1>

			<%= form_for(:session , :url => sessions_path) do |f| %>

			  <div class="field">
			    <%= f.label :username %><br />
			    <%= f.text_field :username %>
			  </div>
			  <div class="field">
			    <%= f.label :password %><br />
			    <%= f.password_field :password %>
			  </div>

			  <div class="actions">
			    <%= f.submit "Sign in" %>
			  </div>
			<p>New user? <%= link_to "Sign up now!", signup_path %></p>
			<% end %>
			
		</div>

	</div>
	<!-- end content -->
	<!-- start sidebars -->
	
	<div style="clear: both;">&nbsp;</div>
<!-- end page -->
<div id="footer">
	<p><%= link_to "Go Back to Host Page" , root_path%></p>
</div>
</div>

</div>
