<%= form_for(:guest, :url => guests_path) do |f| %>


  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
<div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  
  <div class="field">
    <%= f.label :expected_attendence%><br />
    <%= f.text_field :expected_attendence %>
  </div>
 
  <div class="actions">
    <%= f.submit "Invite" %>
  </div>
<% end %>

