<div class="host_info">
  <a href="<%= host_path(current_host) %>">
    <%= gravatar_for current_host, :size => 30 %>
    <span class="host_name">
      <%= current_host.last_name %>
    </span>
    <span class="parties">
      <%= pluralize(current_host.parties.count, "party") %>
    </span>
  </a>
</div>